<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.dongzhiwuapp">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        

        
        <activity android:name=".splashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"></activity>

        <activity android:name=".Animal.ShowAnimalClassifyListActivity">
            <intent-filter>
                <action android:name="android.intent.action.ShowAnimalClassifyListActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Plant.ShowPlantClassifyListActivity">
            <intent-filter>
                <action android:name="android.intent.action.ShowPlantClassifyListActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity android:name=".Plant.PlantFinalClassifyListActivity">
            <intent-filter>
                <action android:name="android.intent.action.PlantFinalClassifyListActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>


        <activity android:name=".Animal.AnimalDeepClassifyListActivity">
            <intent-filter>
                <action android:name="android.intent.action.AnimalDeepClassifyList"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity android:name=".Animal.AnimalFinalClassifyListActivity">
            <intent-filter>
                <action android:name="android.intent.action.AnimalFinalClassifyListActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Animal.DisplayAnimalInfoActivity">
            <intent-filter>
                <action android:name="android.intent.action.DisplayAnimalInfoActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Plant.DisplayPlantInfoActivity">
            <intent-filter>
                <action android:name="android.intent.action.DisplayPlantInfoActivity"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Web.StartWebActivity">
            <intent-filter>
                <action android:name="android.intent.action.StartWebActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>